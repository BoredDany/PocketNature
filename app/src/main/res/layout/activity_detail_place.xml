<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".places.DetailPlaceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgPlace"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/nevado"
                android:scaleType="centerCrop">
            </ImageView>

            <TextView
                android:id="@+id/namePlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Central Park"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="15dp">

            </TextView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/profilePhoto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/baseline_account_blue">
                </ImageView>

                <TextView
                    android:id="@+id/companyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New York City Department of Parks and Recreation"
                    android:textColor="@color/blue"
                    android:textSize="15sp"
                    android:layout_toEndOf="@+id/profilePhoto"
                    android:layout_centerVertical="true">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp">

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="0"/>

                <TextView
                    android:id="@+id/moreInfoLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More info"
                    android:textStyle="italic"
                    android:textColor="@color/blue"
                    android:textSize="15sp"
                    android:layout_toEndOf="@+id/ratingBar"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="textEnd">

                </TextView>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/locationLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/locationBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/baseline_location_blue"
                    tools:srcCompat="@drawable/baseline_location_blue" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/blue"
                    android:text="New York" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/blue"
                                android:text="Central Park is an urban park in New York City located between the Upper West and Upper East Sides of Manhattan. It is the most visited urban park in the United States and one of the most filmed locations in the world."/>

                            <TextView
                                android:id="@+id/categories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_marginBottom="30dp"
                                android:textStyle="bold"
                                android:textColor="@color/blue"
                                android:text="Nature, Art and Culture"/>

                        </LinearLayout>

                    </ScrollView>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:background="@drawable/round_corner_blue_chart">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/white"
                                android:text="Recomendations"/>

                            <TextView
                                android:id="@+id/recomendations"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_marginBottom="20dp"
                                android:textColor="@color/white"
                                android:text="A must-visit green oasis in the heart of the city."/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/white"
                                android:text="Included services"/>

                            <TextView
                                android:id="@+id/includedServices"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_marginBottom="20dp"
                                android:textColor="@color/white"
                                android:text="Walking paths, Lakes, Zoo"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/white"
                                android:text="Pricing: This one is free"/>

                            <ListView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:layout_weight="1">
                            </ListView>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_list"
        app:headerLayout="@layout/nav_header"/>

</androidx.drawerlayout.widget.DrawerLayout>