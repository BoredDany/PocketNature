<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".signups.SignUpBusinessDetailActivity">

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:padding="15dp">


        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_corner_white">


            <ImageView
                android:id="@+id/logoImg"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/logo"
                tools:srcCompat="@drawable/logo" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:text="CREATE YOUR ACCOUNT"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/userTypeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="BUSINESS"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/head"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/facebook"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_white"
                android:hint="Link to Facebook"
                android:paddingLeft="43dp"
                android:textColorHint="#4D000000" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_white"
                android:padding="5dp"
                app:srcCompat="@drawable/facebook_icon"
                tools:srcCompat="@drawable/facebook_icon" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/instagram"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_white"
                android:hint="Link to Instagram"
                android:paddingLeft="43dp"
                android:textColorHint="#4D000000" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_white"
                android:padding="5dp"
                app:srcCompat="@drawable/instagram_icon"
                tools:srcCompat="@drawable/instagram_icon" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/tiktok"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_white"
                android:hint="Link to Tik Tok"
                android:paddingLeft="43dp"
                android:textColorHint="#4D000000" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_white"
                android:padding="5dp"
                app:srcCompat="@drawable/tiktok_icon"
                tools:srcCompat="@drawable/tiktok_icon" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/youtube"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_white"
                android:hint="Link to YouTube"
                android:paddingLeft="43dp"
                android:textColorHint="#4D000000" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_white"
                android:padding="5dp"
                app:srcCompat="@drawable/youtube"
                tools:srcCompat="@drawable/youtube" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/whatsapp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_white"
                android:hint="Link to WhatsApp"
                android:paddingLeft="43dp"
                android:textColorHint="#4D000000" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_white"
                android:padding="5dp"
                app:srcCompat="@drawable/whatsapp_icon"
                tools:srcCompat="@drawable/whatsapp_icon" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:text="Load a photo: Your logo, your product / service ..."
                android:textColor="@color/blue">
            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/cameraBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/round_corner_white"
                    android:backgroundTint="@color/blue"
                    app:srcCompat="@drawable/baseline_account_circle_24"
                    tools:srcCompat="@drawable/baseline_camera_alt_24"
                    android:padding="20dp"/>

                <ImageButton
                    android:id="@+id/galleryBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/round_corner_white"
                    android:backgroundTint="@color/blue"
                    app:srcCompat="@drawable/baseline_insert_photo_24"
                    tools:srcCompat="@drawable/baseline_insert_photo_24"
                    android:padding="20dp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:scaleType="centerCrop"
                android:background="@color/white"
                android:padding="100dp"
                app:srcCompat="@drawable/baseline_photo_size_select_actual_24">

            </ImageView>

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/round_corner_blue"
            android:text="sign up"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
    </LinearLayout>

</RelativeLayout>