<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:id="@+id/whiteLay"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@drawable/round_corner_white_backgroung"
        android:orientation="vertical"
        android:gravity="center">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/logoLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_white_backgroung"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/logoImg"
                android:layout_width="155dp"
                android:layout_height="155dp"
                app:srcCompat="@drawable/logo"
                tools:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POCKETNATURE"
                android:layout_marginBottom="80dp"
                android:textColor="@color/blue"
                android:textSize="30sp" />

            <LinearLayout
                android:id="@+id/loginData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_green_background"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="30dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accout type"
                    android:layout_centerInParent="true"
                    android:textColor="@color/blue"
                    android:layout_marginBottom="30dp">

                </TextView>

                <Spinner
                    android:id="@+id/accType"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/round_corner_white"
                    android:layout_below="@+id/title"
                    android:entries="@array/accounts"/>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/round_corner_blue"
                    android:text="next"
                    android:textColor="@color/white" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>