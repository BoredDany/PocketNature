<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".SignUpTouristActivity">


    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:padding="15dp">


        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/round_corner_white">


            <ImageView
                android:id="@+id/logoImg"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/logo"
                tools:srcCompat="@drawable/logo" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:text="CREATE YOUR ACCOUNT"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/touristTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="TURISTA"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_above="@+id/footer"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_corner_white"
            android:hint="name"
            android:paddingStart="20dp"
            android:textColorHint="#4D000000" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/name"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_corner_white"
            android:hint="email"
            android:paddingStart="20dp"
            android:textColorHint="#4D000000" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/email"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_corner_white"
            android:hint="phone"
            android:paddingStart="20dp"
            android:textColorHint="#4D000000" />

        <EditText
            android:id="@+id/nationality"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/phone"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_corner_white"
            android:hint="nationality"
            android:paddingStart="20dp"
            android:textColorHint="#4D000000" />


        <FrameLayout
            android:id="@+id/birthdayLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nationality"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_white"
                android:hint="birthday"
                android:paddingLeft="43dp"
                android:textColorHint="#4D000000" />

            <ImageView
                android:id="@+id/calendarLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_white"
                android:padding="5dp"
                app:srcCompat="@drawable/baseline_calendar_month_24"
                tools:srcCompat="@drawable/baseline_calendar_month_24" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/usernameLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/birthdayLay"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_white"
                android:hint="username"
                android:paddingLeft="43dp"
                android:textColorHint="#4D000000" />

            <ImageView
                android:id="@+id/logoProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_white"
                android:padding="5dp"
                app:srcCompat="@drawable/baseline_account_circle_24"
                tools:srcCompat="@drawable/baseline_account_circle_24" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/passwordLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usernameLay"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_white"
                android:hint="password"
                android:paddingLeft="43dp"
                android:textColorHint="#4D000000" />

            <ImageView
                android:id="@+id/logoPassword"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_white"
                android:padding="5dp"
                app:srcCompat="@drawable/baseline_lock_24"
                tools:srcCompat="@drawable/baseline_lock_24" />

        </FrameLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/round_corner_blue"
            android:text="Login"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
    </LinearLayout>


</RelativeLayout>